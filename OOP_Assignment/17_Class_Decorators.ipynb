    "# 17. Class Decorators\n",
    "def add_greeting(cls):\n",
    "    def greet(self):\n",
    "        return \"Hello from Decorator!\"\n",
    "    cls.greet = greet\n",
    "    return cls\n",
    "\n",
    "@add_greeting\n",
    "class Person:\n",
    "    def __init__(self, name):\n",
    "        self.name = name\n",
    "\n",
    "# Test\n",
    "person = Person(\"Mike\")\n",
    "print(person.greet())"
   ]
  }
